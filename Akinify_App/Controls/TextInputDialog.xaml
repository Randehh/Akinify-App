<Window x:Class="Akinify_App.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Akinify_App"
        mc:Ignorable="d"
		ResizeMode="NoResize"
		SizeToContent="Height"
		WindowStartupLocation="CenterScreen"
        Title="{Binding HeaderText}" Height="auto" Width="500">
    <Grid Margin="5">
		<StackPanel Orientation="Vertical">
			<TextBlock Text="{Binding Description}"/>
			<TextBox Text="{Binding InputText}" Margin="0,5,0,0"/>
			<Button Content="Confirm" Command="{Binding ConfirmCommand}" Margin="0,5,0,0"/>
		</StackPanel>
    </Grid>
</Window>
